package edu.mum.rainbow.business;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;
import org.springframework.stereotype.Component;

@Component
public class Main {

	private final static String[] configFiles = { "/META-INF/spring/context/application-context.xml",
			"/META-INF/spring/context/amqp-context.xml", "/META-INF/spring/context/data-access-context.xml",
			"/META-INF/spring/context/security-context.xml", "/META-INF/spring/context/validation-context.xml",
			"/META-INF/spring/batch/batch-config.xml", "/META-INF/spring/batch/dailycallsummary-job.xml",
			"/META-INF/spring/batch/monthlycallcost-job.xml", "/META-INF/spring/integration/application-context.xml",
			"/META-INF/spring/integration/jms-context.xml", "/META-INF/spring/integration/amqp-context.xml",
			"/META-INF/spring/integration/client-bill-eai.xml" };

	public static void main(String[] args) {
		ApplicationContext applicationContext = new ClassPathXmlApplicationContext(configFiles, Main.class);
		applicationContext.getBean(Main.class).mainInternal(applicationContext);
	}

	private void mainInternal(ApplicationContext applicationContext) {
		// Wait for Messages
		System.out.println("*************************************************");
		System.out.println("                       EAI                       ");
		System.out.println("*************************************************");
	}

}
