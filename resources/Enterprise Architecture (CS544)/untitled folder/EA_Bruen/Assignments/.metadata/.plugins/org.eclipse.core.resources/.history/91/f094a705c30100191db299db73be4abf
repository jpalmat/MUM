package edu.mum.rest.service.impl;

import java.util.Arrays;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpEntity;
import org.springframework.http.HttpMethod;
import org.springframework.stereotype.Component;
import org.springframework.web.client.RestTemplate;

import edu.mum.rainbow.common.model.Call;
import edu.mum.rainbow.common.model.Client;
import edu.mum.rainbow.common.model.DailyTransaction;
import edu.mum.rainbow.rest.RestHttpHeader;
import edu.mum.rainbow.rest.service.TransactionRestService;

@Component
public class TransacionRestServiceImpl implements TransactionRestService {

	@Autowired
	RestHttpHeader remoteApi;

	@Override
	public DailyTransaction save(DailyTransaction tran) {
		RestTemplate restTemplate = remoteApi.getRestTemplate();
		HttpEntity<DailyTransaction> httpEntity = new HttpEntity<DailyTransaction>(tran, remoteApi.getHttpHeaders());
		
		
		restTemplate.exchange("http://localhost:8080/Mersal-RestService/mersalCalls/add/", HttpMethod.POST, httpEntity,Client.class);
		
		return null;
	}

	@Override
	public List<Call> getClientCalls(String mobileNumber) {
		RestTemplate restTemplate = remoteApi.getRestTemplate();
		List<Call> callList = Arrays.asList(restTemplate.exchange("http://localhost:8080/Mersal-RestService/mersalCalls/"+ mobileNumber
				, HttpMethod.GET, remoteApi.getHttpEntity(), Call[].class).getBody());
		
        //remoteApi.getHttpEntity() - get HTTP headers [Authentication; JSON ACCEPT]
		return callList;
	}

}
