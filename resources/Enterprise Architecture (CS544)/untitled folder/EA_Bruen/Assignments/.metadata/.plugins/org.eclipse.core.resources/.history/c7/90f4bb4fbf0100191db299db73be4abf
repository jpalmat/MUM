package edu.mum.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseStatus;
import org.springframework.web.bind.annotation.RestController;

import edu.mum.mersal.business.service.CallService;
import edu.mum.mersal.common.model.Call;
import edu.mum.rainbow.business.service.DailyTransactionService;
import edu.mum.rainbow.business.service.TransactionService;
import edu.mum.rainbow.common.model.DailyTransaction;

@RestController
@RequestMapping({"/mersalCalls"})
public class TransactionController {
	
	@Autowired
	private DailyTransactionService  dailyTransactionService;

	   
	@RequestMapping(value = "/add", method = RequestMethod.POST)
	@ResponseStatus(value = HttpStatus.NO_CONTENT)
	public void initiateCall(@RequestBody DailyTransaction dailyTransaction) {
		dailyTransactionService.createDailyTran(dailyTransaction);
 
	}
	
	
	@RequestMapping("/{mobileNumber}")
	public List<Call> getClientCalls(@PathVariable("mobileNumber") String mobileNumber) {
		List<Call> clientCalls = callService.getClientCalls(mobileNumber);
		return clientCalls;

	}
	
	
	
 
}
